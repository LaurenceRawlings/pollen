<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory app:title="Localisation">

        <ListPreference
            app:defaultValue="GB"
            app:entries="@array/countries"
            app:entryValues="@array/countries"
            app:key="country"
            app:title="Country"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="EN"
            app:entries="@array/languages"
            app:entryValues="@array/languages"
            app:key="language"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">
        <SwitchPreference
            app:defaultValue="true"
            app:title="Receive Notifications"
            app:key="notifications"/>

        <ListPreference
            app:defaultValue="6"
            android:title="Alert Interval"
            app:key="notification-interval"
            android:entryValues="@array/notificationIntervalValues"
            android:entries="@array/notificationIntervals"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="News">
        <MultiSelectListPreference
            app:key="sources"
            app:title="Sources" />

        <Preference
            android:key="topics"
            android:title="Topics">
            <intent
                android:action="com.laurencerawlings.pollen.ui.account.TopicsActivity"
                android:targetClass="TopicsActivity" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>